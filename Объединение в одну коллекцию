internal class Program
{
    private static void Main(string[] args)
    {
        List<string> firstListNumbers = new List<string>() { "1", "2", "1" };
        List<string> secondListNumbers = new List<string>() { "3", "2" };

        Console.WriteLine("Первый массив: ");
        ShowArray(firstListNumbers);

        Console.WriteLine("Второй массив: ");
        ShowArray(secondListNumbers);

        Console.WriteLine("Новый массив: ");
        MergeArrays(firstListNumbers, secondListNumbers);
        Console.ReadKey();
    }

    private static void MergeArrays(List<string> firstList, List<string> secondList)
    {
        List<string> resultList = new List<string>();

        foreach (var element in firstList.Concat(secondList))
        {
            if(resultList.Contains(element) == false)
            {
                resultList.Add(element);
            }
        }

        foreach (var list in resultList)
        {
            Console.WriteLine(list);
        }
    }
    private static void ShowArray(List<string> arrays)
    {
        foreach(var array in arrays)
        {
            Console.WriteLine(array);
        }
    }
}
